{
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.formatOnSaveMode": "file",
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.rulers": [
            120
        ],
        "editor.wordWrapColumn": 120,
        "editor.inlayHints.enabled": "on",
        "editor.codeActionWidget.includeNearbyQuickFixes": true,
        "editor.codeLens": true,
        "editor.suggestOnTriggerCharacters": true,
        /* "editor.suggestSelection": "first",
        "editor.suggest.insertMode": "replace",
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggest.showKeywords": true,
        "editor.suggest.showSnippets": true,
        "editor.suggest.showStatusBar": true,
        "editor.suggest.showWords": true,
        "editor.suggest.showColors": true,
        "editor.suggest.showFiles": true,
        "editor.suggest.showFolders": true,
        "editor.suggest.showReferences": true, */
    },
    // Remove from file watching
    "files.watcherExclude": {
        "**/target": true,
    },
    "files.exclude": {
        //"**/.*": true,
        "**/target": true,
    },
    // Causes the debug view to automatically appear when a breakpoint is hit. This
    // setting is global and not configurable per-language.
    "debug.openDebug": "openOnDebugBreak",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "Cargo.toml": ".flutter-plugins, .packages, .flutter-plugins-dependencies, .metadata, .packages, pubspec.lock, build.yaml, analysis_options.yaml, all_lint_rules.yaml, rs*.yaml, flutter*.yaml, icons_launcher.yaml, l10n.yaml, melos.yaml, pubspec_overrides.yaml",
        ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*",
        "readme.*": "authors, backers.md, changelog*, citation*, code_of_conduct.md, codeowners, contributing.md, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors.md",
        "*.rs": "i_$(capture).rs, $(capture).config.rs",
        "*.graphql": "$(capture).gql.rs, $(capture).*.gql.rs",
        "firebase.json": " .firebaserc",
    },
    /* "files.associations": {
    "*.drift": "sql"
  }, */
    "highlight.regexes": {
        "(\"@\\s*.+\":\\s{0,1}{},)": {
            "filterFileRegex": ".*\\.arb",
            "decorations": [
                {
                    "overviewRulerColor": "#d19a66",
                    "backgroundColor": "#d19a66",
                    "color": "#282c34",
                    "fontWeight": "bold"
                }
            ]
        }
    },
    "cSpell.words": [
        ""
    ],
    "cSpell.ignorePaths": []
}